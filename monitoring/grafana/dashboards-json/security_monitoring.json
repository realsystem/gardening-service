{
  "id": null,
  "uid": "security-monitoring",
  "title": "Security Monitoring",
  "tags": [
    "security",
    "authentication",
    "rate-limiting"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Authentication Success Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{path=\"/token\",status=\"200\"}[5m])",
          "legendFormat": "Successful logins",
          "refId": "A"
        },
        {
          "expr": "rate(http_requests_total{path=\"/token\",status=\"401\"}[5m])",
          "legendFormat": "Failed logins",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "label": "Logins/sec",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "id": 2,
      "title": "Rate Limited Requests",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum by (path) (rate(http_requests_total{status=\"429\"}[1m]))",
          "legendFormat": "{{ path }}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Rate limited/sec",
          "show": true
        },
        {
          "show": false
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                10
              ],
              "type": "gt"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "type": "query"
          }
        ],
        "name": "High Rate Limit Activity"
      }
    },
    {
      "id": 3,
      "title": "Failed Authentication Attempts by IP",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum by (client_ip) (increase(http_requests_total{path=\"/token\",status=\"401\"}[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "client_ip": "IP Address",
              "Value": "Failed Attempts (5m)"
            }
          }
        }
      ]
    },
    {
      "id": 4,
      "title": "Rate Limited IPs",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum by (client_ip) (increase(http_requests_total{status=\"429\"}[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "client_ip": "IP Address",
              "Value": "Rate Limited Requests (5m)"
            }
          }
        }
      ]
    },
    {
      "id": 5,
      "title": "HTTP Status Codes Over Time",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total[1m]))",
          "legendFormat": "{{ status }}",
          "refId": "A"
        }
      ],
      "stack": true,
      "yaxes": [
        {
          "label": "Requests/sec",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "id": 6,
      "title": "Security Events Timeline",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{status=\"401\"}[1m])",
          "legendFormat": "401 Unauthorized",
          "refId": "A"
        },
        {
          "expr": "rate(http_requests_total{status=\"403\"}[1m])",
          "legendFormat": "403 Forbidden",
          "refId": "B"
        },
        {
          "expr": "rate(http_requests_total{status=\"429\"}[1m])",
          "legendFormat": "429 Rate Limited",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "label": "Events/sec",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "id": 7,
      "title": "Total Failed Logins (1h)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(increase(http_requests_total{path=\"/token\",status=\"401\"}[1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "value": null,
            "color": "green"
          },
          {
            "value": 50,
            "color": "yellow"
          },
          {
            "value": 100,
            "color": "red"
          }
        ]
      }
    },
    {
      "id": 8,
      "title": "Rate Limited Requests (1h)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(increase(http_requests_total{status=\"429\"}[1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "value": null,
            "color": "green"
          },
          {
            "value": 100,
            "color": "yellow"
          },
          {
            "value": 500,
            "color": "red"
          }
        ]
      }
    },
    {
      "id": 9,
      "title": "Auth Failure Rate %",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{path=\"/token\",status=\"401\"}[5m])) / sum(rate(http_requests_total{path=\"/token\"}[5m]))) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "noValue": "0"
        }
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "value": null,
            "color": "green"
          },
          {
            "value": 10,
            "color": "yellow"
          },
          {
            "value": 20,
            "color": "red"
          }
        ]
      }
    },
    {
      "id": 10,
      "title": "Unique IPs (1h)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 24
      },
      "targets": [
        {
          "expr": "count(count by (client_ip) (http_requests_total))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "noValue": "0"
        }
      }
    }
  ]
}
